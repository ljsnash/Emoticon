<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Black"
    android:launchMode="singleInstance"
    tools:context="goblins.emoticon.MainActivity">

    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:text="载入表情包"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/btn_emoji"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_emoji"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="拍照"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/btn_camera"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/img_emoji"
        android:src="@drawable/psyduck"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/btn_camera"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="300px"
        android:id="@+id/img_camera"
        android:src="@drawable/lena"
        android:layout_width="300px"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/btn_camera"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="评分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_score"
        android:layout_alignTop="@+id/txt_score"
        android:layout_toLeftOf="@+id/txt_score"
        android:layout_alignLeft="@+id/btn_emoji"
        android:layout_alignStart="@+id/btn_emoji" />

    <TextView
        android:text="  0"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/txt_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/btn_emoji"
        android:layout_alignRight="@+id/btn_emoji"
        android:layout_alignEnd="@+id/btn_emoji"
        android:textColor="@color/White"/>


</RelativeLayout>
